{
	"name": "@collaborne/remirror-entity-extension",
	"version": "1.0.0",
	"description": "Extension for remirror.io to store entities",
	"author": "Collaborne",
	"license": "Apache-2.0",
	"repository": "Collaborne/remirror-entity-extension",
	"main": "dist/index.js",
	"source": "src/index.tsx",
	"engines": {
		"npm": ">=8.3.0",
		"node": ">=10"
	},
	"scripts": {
		"lint": "npx eslint --report-unused-disable-directives $(node -p 'require(\"./tsconfig.test.json\").include.map(include => `'\\${include}.\\{js,ts,tsx\\}'`).join(\" \")')",
		"build": "npm run build:ts --",
		"build:ts": "tsc -p tsconfig.dist.json",
		"build:watch": "npm run build -- --watch",
		"test": "run-s lint test:unit",
		"test:unit": "cross-env CI=1 SKIP_PREFLIGHT_CHECK=true NODE_OPTIONS=--experimental-vm-modules npm run test:unit:internal --",
		"test:watch": "cross-env SKIP_PREFLIGHT_CHECK=true npm run test:unit:internal --",
		"test:unit:internal": "npx jest",
		"predeploy": "run-s storybook:build",
		"deploy": "gh-pages -d storybook-static",
		"storybook": "NODE_OPTIONS=\"${NODE_OPTIONS} --openssl-legacy-provider\" start-storybook -p 9009",
		"storybook:build": "NODE_OPTIONS=\"${NODE_OPTIONS} --openssl-legacy-provider\" build-storybook --quiet"
	},
	"peerDependencies": {
		"@remirror/pm": "^2.0.0",
		"@remirror/react": "^2.0.0",
		"react": "^17.0.0 || ^18.0.0",
		"remirror": "^2.0.0"
	},
	"devDependencies": {
		"@emotion/react": "^11.10.4",
		"@emotion/styled": "^11.10.4",
		"@remirror/pm": "^2.0.0",
		"@remirror/react": "^2.0.9",
		"@remirror/styles": "^2.0.0",
		"@storybook/addon-actions": "^6.5.12",
		"@storybook/addon-controls": "^6.5.12",
		"@storybook/addon-docs": "^6.5.12",
		"@storybook/addon-links": "^6.5.12",
		"@storybook/addon-toolbars": "^6.5.12",
		"@storybook/addons": "^6.5.12",
		"@storybook/builder-webpack5": "^6.5.12",
		"@storybook/manager-webpack5": "^6.5.12",
		"@storybook/preset-create-react-app": "^4.1.2",
		"@storybook/react": "^6.5.12",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.2.1",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.18.0",
		"eslint-config-collaborne": "^5.2.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard-react": "^11.0.1",
		"eslint-plugin-disable": "^2.0.3",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.5.3",
		"eslint-plugin-n": "^15.3.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-standard": "^4.1.0",
		"gh-pages": "^4.0.0",
		"jest": "^28.1.2",
		"jest-environment-jsdom": "^28.1.2",
		"jest-extended": "^2.0.0",
		"jest-remirror": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "^5.0.1",
		"remirror": "^2.0.9",
		"ts-jest": "^28.0.5",
		"tsx": "^3.7.1",
		"typescript": "^4.7.4"
	},
	"files": [
		"dist",
		"locales",
		"src",
		"tsconfig.dist.json"
	]
}
